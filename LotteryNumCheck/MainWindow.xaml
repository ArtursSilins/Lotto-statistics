        <StackPanel Grid.Column="9" Panel.ZIndex="1" Grid.Row="2" Width="40" HorizontalAlignment="Right">

            <Button x:Name="topSimilarities" Content="Top Matches"
                    Padding="-1" Grid.Column="9" Grid.Row="2" Width="200"
                    Height="38" Background="White"  Foreground="#FFC50F0F" FontWeight="Bold"
                    FontSize="25" 
                    Visibility="{Binding TopSimilaritiesVisibility}"
                    Command="{Binding TopSimilaritiesOpen}">
                <Button.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.LayoutTransform>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseEnter">
                        <i:InvokeCommandAction Command="{Binding HoverOnTopSimilatities}"/>
                    </i:EventTrigger>
                    <i:EventTrigger EventName="MouseLeave">
                        <i:InvokeCommandAction Command="{Binding HoverOfTopSimilatities}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </Button>

