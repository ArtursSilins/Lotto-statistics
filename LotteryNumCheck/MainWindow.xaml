                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:Num6ResultList Padding="0 10 0 0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <ScrollViewer Grid.Row="2" Grid.Column="7" 
                      ToolTip="Moust frekuently drawn numbers"
                      CanContentScroll="True"
                      VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ItemsControl ItemsSource="{Binding AdditionalNumList}" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:AdditionalNumResultList Padding="0 10 0 0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <ScrollViewer Grid.Row="2" Grid.Column="8"
                      CanContentScroll="True"
                      VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ItemsControl ItemsSource="{Binding WinResultList}" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:AllResultList Padding="7 7 0 0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

