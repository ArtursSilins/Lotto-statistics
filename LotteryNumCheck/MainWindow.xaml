<Window x:Class="LotteryNumCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LotteryNumCheck"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Lotto Statistic"
        Height="1000"
        Width="2000"
        Background="#FF1F893C"
        WindowStartupLocation="CenterScreen" WindowStyle="None" WindowState="Maximized" ResizeMode="NoResize" >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Storyboard x:Key="AnimatedTopSimilarities">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="topSimilaritiesList">
                    <EasingDoubleKeyFrame KeyTime="0" Value="2000"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="AnimationTopSimilaritiesOff">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="topSimilaritiesList">
                    <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="2000"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="DrawSequenceVisualOn">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="numbersChart">
                    <EasingDoubleKeyFrame KeyTime="0" Value="2000"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="DrawSequenceVisualOff">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="numbersChart">
                    <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="2000"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <!--#region Popup bubles-->

            <Storyboard x:Key="AnimatedMinimizePopup">
                <DoubleAnimation Storyboard.TargetName="MinimizeBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="0" Duration="0:0:0.5"/>
                <DoubleAnimation Storyboard.TargetName="MinimizeBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="1" Duration="0:0:0.5"
                                 BeginTime="0:0:0.5"/>
                <DoubleAnimation Storyboard.TargetName="MinimizeBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="1" To="0" Duration="0:0:0.5"
                                 BeginTime="0:0:5"/>
            </Storyboard>

            <Storyboard x:Key="AnimatedCloasePopup">
                <DoubleAnimation Storyboard.TargetName="CloaseBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="0" Duration="0:0:0.5"/>
                <DoubleAnimation Storyboard.TargetName="CloaseBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="1" Duration="0:0:0.5"
                                 BeginTime="0:0:0.5"/>
                <DoubleAnimation Storyboard.TargetName="CloaseBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="1" To="0" Duration="0:0:0.5"
                                 BeginTime="0:0:5"/>
            </Storyboard>

            <Storyboard x:Key="AnimatedTopSimilaritiesPopupBuble">
                <DoubleAnimation Storyboard.TargetName="TopSimilaritiesPopupBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="0" Duration="0:0:0.5"/>
                <DoubleAnimation Storyboard.TargetName="TopSimilaritiesPopupBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="1" Duration="0:0:0.5"
                                 BeginTime="0:0:0.5"/>
                <DoubleAnimation Storyboard.TargetName="TopSimilaritiesPopupBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="1" To="0" Duration="0:0:0.5"
                                 BeginTime="0:0:5"/>
            </Storyboard>

            <Storyboard x:Key="AnimatedDrawSequenceVisualPopupBuble">
                <DoubleAnimation Storyboard.TargetName="DrawSequenceVisualPopupBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="0" Duration="0:0:0.5"/>
                <DoubleAnimation Storyboard.TargetName="DrawSequenceVisualPopupBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="1" Duration="0:0:0.5"
                                 BeginTime="0:0:0.5"/>
                <DoubleAnimation Storyboard.TargetName="DrawSequenceVisualPopupBuble"
                                 Storyboard.TargetProperty="Opacity"
                                 From="1" To="0" Duration="0:0:0.5"
                                 BeginTime="0:0:5"/>
            </Storyboard>


            <!--#endregion-->

        </ResourceDictionary>

    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Button.Click" SourceName="topSimilarities">
            <BeginStoryboard x:Name="AnimatedTopSimilarities_BeginStoryboard" Storyboard="{StaticResource AnimatedTopSimilarities}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Button.Click" SourceName="topSimilaritiesCloase">
            <BeginStoryboard x:Name="AnimatedTopSimilarities_BeginStoryboard1" Storyboard="{StaticResource AnimationTopSimilaritiesOff}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="Button.Click" SourceName="DrawSequenceVisualOpen">
            <BeginStoryboard Storyboard="{StaticResource DrawSequenceVisualOn}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Button.Click" SourceName="DrawSequenceVisualClose">
            <BeginStoryboard Storyboard="{StaticResource DrawSequenceVisualOff}"/>
        </EventTrigger>

        <!--#region Popup Bubble Trigers-->
        <EventTrigger RoutedEvent="MouseEnter" SourceName="Minimize">
            <BeginStoryboard Storyboard="{StaticResource AnimatedMinimizePopup}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="MouseEnter" SourceName="Cloase">
            <BeginStoryboard Storyboard="{StaticResource AnimatedCloasePopup}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="MouseEnter" SourceName="topSimilarities">
            <BeginStoryboard Storyboard="{StaticResource AnimatedTopSimilaritiesPopupBuble}"/>
        </EventTrigger>

        <EventTrigger RoutedEvent="MouseEnter" SourceName="DrawSequenceVisualOpen">
            <BeginStoryboard Storyboard="{StaticResource AnimatedDrawSequenceVisualPopupBuble}"/>
        </EventTrigger>
        <!--#endregion-->

    </Window.Triggers>

