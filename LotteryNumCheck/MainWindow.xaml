            </ItemsControl>
        </ScrollViewer>-->


        <Grid Grid.Column="8"
              Grid.Row="1"
              Grid.RowSpan="2"
              Panel.ZIndex="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1"
                        Panel.ZIndex="2"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Width="100"
                        HorizontalAlignment="Right">
                
                <Button x:Name="topSimilaritiesCloase"
                        Width="50" Height="70"
                        Background="White" 
                        Foreground="#FFC50F0F"
                        FontWeight="Bold"
                        FontSize="25" 
                        HorizontalAlignment="Right"
                        Visibility="{Binding TopSimilaritiesCloaseVisibility}"
                        Command="{Binding TopSimilaritiesCloase}">

                    <Border Width="45" Height="70">
                        <Border.Background>
                            <ImageBrush ImageSource="Images\Close Icon.png"/>
                        </Border.Background>
                    </Border>

                </Button>
                <Button x:Name="DrawSequenceVisualClose"
                        Margin="0 10 0 0"
                        Width="50" Height="70"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="25"
                        HorizontalAlignment="Right"
                        Visibility="{Binding NumberPatternsCloaseVisibility}"
                        Command="{Binding NumberPatternsCloase}">

                    <Border Width="45" Height="70">
                        <Border.Background>
                            <ImageBrush ImageSource="Images\Close Icon.png"/>
                        </Border.Background>
                    </Border>

                </Button>
            </StackPanel>


            <StackPanel Grid.Column="1"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Panel.ZIndex="2"
                        Width="100"
                        HorizontalAlignment="Right">

                <Button x:Name="topSimilarities"
                        Width="70" Height="70"
                        Background="White"
                        Foreground="#FFC50F0F"
                        FontWeight="Bold"
                        FontSize="25" 
                        HorizontalAlignment="Right"
                        Visibility="{Binding TopSimilaritiesVisibility}"
                        Command="{Binding TopSimilaritiesOpen}">

                    <Border Width="45" Height="45">
                        <Border.Background>
                            <ImageBrush ImageSource="Images\Match Icon.png"/>
                        </Border.Background>
                    </Border>
                    
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseEnter">
                            <i:InvokeCommandAction Command="{Binding HoverOnTopSimilatities}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="MouseLeave">
                            <i:InvokeCommandAction Command="{Binding HoverOfTopSimilatities}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                </Button>

                <Button x:Name="DrawSequenceVisualOpen"
                        Margin="0 10 0 0"
                        Width="70" Height="70"
                        Background="White"
                        Foreground="Red"
                        FontWeight="Bold"
                        FontSize="25"
                        HorizontalAlignment="Right"
                        Visibility="{Binding NumberPatternsVisibility}"
                        Command="{Binding NumberPatternsOpen}" >

                    <Border Width="40" Height="40">
                        <Border.Background>
                            <ImageBrush ImageSource="Images\Patterns Icon.png"/>
                        </Border.Background>
                    </Border>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseEnter">
                            <i:InvokeCommandAction Command="{Binding HoverOnNumberPatterns}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="MouseLeave">
                            <i:InvokeCommandAction Command="{Binding HoverOfNumberPatterns}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>


                </Button>
            </StackPanel>



            <local:PopupBubble x:Name="MinimizeBuble"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               MaxWidth="80"
                               MinWidth="80"
                               Margin="0 0 50 0"
                               Opacity="0.8"
                               Height="50"
                               Panel.ZIndex="1"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right"
                               Visibility="{Binding MinimizePopupBuble}">

            </local:PopupBubble>

            <local:PopupBubble x:Name="CloaseBuble"
                               Grid.Column="1"
                               Opacity="0.8"
                               Height="50"
                               MaxWidth="70"
                               MinWidth="70"
                               Panel.ZIndex="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Visibility="{Binding CloasePopupBuble}">

            </local:PopupBubble>

            <local:PopupBubble x:Name="TopSimilaritiesPopupBuble"
                               Grid.Column="1"
                               Opacity="0.8"
                               Height="50"
                               MinWidth="100"
                               MaxWidth="100"
                               Margin="0 0 0 5"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Right"
                               Visibility="{Binding TopSimilaritiesPopupBuble}">

            </local:PopupBubble>

            <local:PopupBubble x:Name="DrawSequenceVisualPopupBuble"
                               Grid.Row="1"
                               Grid.ColumnSpan="2"
                               Opacity="0.8"
                               Height="50"
                               MinWidth="127"
                               MaxWidth="127"
                               Margin="0 160 0 5"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right"
                               Visibility="{Binding DrawSequenceVisualPopupBuble}">

            </local:PopupBubble>


        </Grid>
        
       
        <local:TopSimilarities x:Name="topSimilaritiesList" 
                               Grid.Row="1"
                               Grid.Column="8"
                               Grid.ColumnSpan="1"
                               Grid.RowSpan="2" 
                               >
            <local:TopSimilarities.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="1000"/>
                </TransformGroup>
            </local:TopSimilarities.RenderTransform>

        </local:TopSimilarities>

        <local:DrawSequenceVisual x:Name="numbersChart"
                     Grid.Row="1"
                     Grid.ColumnSpan="9"
                     Grid.RowSpan="2"
                     >
            <local:DrawSequenceVisual.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="2000"/>
                </TransformGroup>
            </local:DrawSequenceVisual.RenderTransform>
        </local:DrawSequenceVisual>
    </Grid>
</Window>
