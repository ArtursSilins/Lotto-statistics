                    FontSize="25" 
                    Visibility="{Binding TopSimilaritiesCloaseVisibility}"
                    Command="{Binding TopSimilaritiesCloase}">
                <Button.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.LayoutTransform>

            </Button>
