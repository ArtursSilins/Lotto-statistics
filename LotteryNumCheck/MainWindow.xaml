        <!--<ScrollViewer Grid.Row="2" Grid.Column="8"
                      CanContentScroll="True"
                      VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="336.6,0,0,0">
            <ItemsControl ItemsSource="{Binding SimilarityHolderViews}" >
                <ItemsControl.ItemTemplate>
