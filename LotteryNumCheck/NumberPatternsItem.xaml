<UserControl x:Class="LotteryNumCheck.NumberPatternsItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LotteryNumCheck"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="22" BorderThickness="0">
    
    <Border CornerRadius="20" Margin="0 3 0 3">
        <Border.Background >
            <ImageBrush ImageSource="{Binding No}" Stretch="Uniform"/>
        </Border.Background>
    </Border>
    
</UserControl>
